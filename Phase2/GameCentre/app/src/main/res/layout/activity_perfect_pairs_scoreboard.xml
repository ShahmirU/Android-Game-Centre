<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TicTacToeScores"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="94dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Perfect Pair Highscores"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"

        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/TicTacToeScores"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="80dp">

        <TableRow android:layout_height="241dp">

            <TextView
                android:id="@+id/row1col1"
                android:layout_width="198dp"
                android:layout_height="59dp"
                android:text="Player"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row1col2"
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:text="Score"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="59dp" >

            <TextView
                android:id="@+id/FirstPlayerName"
                android:layout_width="196dp"
                android:layout_height="59dp"
                android:text="N/A"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/FirstPlayerScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="N/A"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/SecondPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="59dip"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/SecondPlayerScore"
                android:layout_width="wrap_content"
                android:layout_height="59dip"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="17sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/ThirdPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="59dip"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/ThirdPlayerScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="17sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/BackToGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="?attr/colorButtonNormal"
        android:text="Back to Game" />

</RelativeLayout>
