<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TicTacToeScores"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="94dp"
        android:gravity="center"
        android:text="Sliding Tile Highscores"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"

        android:textColor="@color/colorPrimary"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/TicTacToeScores"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="80dp">

        <TableRow android:layout_height="241dp">

            <TextView
                android:id="@+id/row1col1"
                android:layout_width="137dp"
                android:layout_height="63dp"
                android:text=" Game"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/row1col2"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:text="Player"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/row1col3"
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:text="Score"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="59dp" >

            <TextView
                android:id="@+id/row2col1"
                android:layout_width="141dp"
                android:layout_height="49dp"
                android:text="    3X3"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ThreeByThreePlayerName"
                android:layout_width="111dp"
                android:layout_height="match_parent"
                android:text="N/A"
                android:textSize="17sp"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/ThreeByThreePlayerScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="N/A"
                android:textSize="17sp"
                android:textAppearance="@style/TextAppearance.AppCompat" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/row3col1"
                android:layout_width="wrap_content"
                android:layout_height="59dip"
                android:text="    4X4"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/FourByFourPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="59dip"
                android:text="N/A"
                android:textSize="17sp"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/FourByFourPlayerScore"
                android:layout_width="wrap_content"
                android:layout_height="59dip"
                android:text="N/A"
                android:textSize="17sp"
                android:textAppearance="@style/TextAppearance.AppCompat" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/row4col1"
                android:layout_width="wrap_content"
                android:layout_height="59dip"
                android:text="    5X5"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/FiveByFivePlayerName"
                android:layout_width="wrap_content"
                android:layout_height="59dip"
                android:text="N/A"
                android:textSize="17sp"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/FiveByFivePlayerScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="N/A"
                android:textSize="17sp"
                android:textAppearance="@style/TextAppearance.AppCompat" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/BackToGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="?attr/colorButtonNormal"
        android:text="Back to Game" />

</RelativeLayout>
